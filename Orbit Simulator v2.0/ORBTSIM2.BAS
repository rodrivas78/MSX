10   _TURBO ON
20 COLOR15,1,1:SCREEN2,2:X=150:Y=126:T=.6:PX=110:PY=37:VX=.41:VY=-.1
30 B$=CHR$(&H18):B1$=CHR$(&H3C):S$=B$+B1$+B1$+B$:SPRITE$(1)=S$:PUTSPRITE1,(X,Y),7
40 I=I+1:IF PY<Y THEN YA=Y-PY ELSE YA=PY-Y
50 IF PX<X THEN XB=X-PX ELSE XB=PX-X
60 YC=YA*YA:XC=XB*XB
70 'IF PY=Y THEN D1=YA ELSE D1=SQR(YC+XC)
75 IF PX=X THEN D1=XB ELSE D1=SQR(YC+XC)
80 AX=29/(D1*D1)
90 IF PX>XANDPY<Y THEN A1=A1-XB:A2=A2+YA
100 IF PX<XANDPY<Y THEN A1=A1+XB:A2=A2+YA
110 IF PX>XANDPY>Y THEN A1=A1-XB:A2=A2-YA
120 IF PX<XANDPY>Y THEN A1=A1+XB:A2=A2-YA
130 N1=A1*A1:N2=A2*A2:A1=A1/SQR(N1+N2):A2=A2/SQR(N1+N2)
140 A1=A1*AX:A2=A2*AX
150 'LINE(PX,PY)-(PX+A1*500,PY+A2*500),4:LINE(PX,PY)-(PX+VX*20,PY+VY*20),13:CLS
160 A$=INKEY$:IF A$="a" THEN 170 ELSE 180
170 C=8:PSET(PX,PY),C:A1=0:A2=0:VX=VX*1.008:VY=VY*1.008:GOTO 200
180 IF A$="d" THEN C=4:PSET(PX,PY),C:VX=VX/1.008:VY=VY/1.008:GOTO 200
190 VX=VX/1.0001:VY=VY/1.0001:C=11:BEEP:IFI=6000THENI=0:CLS
200 PX=PX+VX*T:PY=PY+VY*T:VX=VX+A1*T:VY=VY+A2*T:PSET(PX,PY),C:A1=0:A2=0:IF INKEY$="q" THEN END ELSE 40
